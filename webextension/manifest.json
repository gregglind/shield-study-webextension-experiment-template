{
  "name": "WebExtension-shield-study",
  "applications": {
    "gecko": { "id": "webextensionExperiment@shield.mozilla.org" }
  },
  "version": "1.0.0",
  "manifest_version": 2,
  "sidebar_action": {
    "default_title": "Demonstration Sidebar",
    "default_panel": "sidebar.html"
  },
  "experiment_apis": {
    "prefs": {
      "schema": "./privileged/prefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/prefs/prefs.js",
        "paths": [["prefs"]]
      }
    }
  }
}
